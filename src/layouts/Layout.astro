---
import '../styles/global.css'
import '@fontsource-variable/funnel-display'
import '@fontsource-variable/onest'

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio - Angel Hernandez</title>
  </head>
  <body class="relative text-black dark:text-white">
    <div class="fixed left-0 top-0 -z-10 h-full w-full">
      <div
        class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 dark:[background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)] bg-radial-[125%_125%_at_50%_10%] from-white from-40% to-[#b9def4] to-100%">
      </div>
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Onest Variable', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    color: rgba(17, 17, 17, 0.9);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
  }

  .title {
    font-family: 'Funnel Display Variable', system-ui, sans-serif;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
