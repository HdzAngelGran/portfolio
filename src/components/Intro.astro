---
import SocialPill from './SocialPill.astro'
import LinkedInIcon from '../icons/LinkedInIcon.astro'
import MailIcon from '../icons/MailIcon.astro'
import GitHubIcon from '../icons/GitHubIcon.astro'
import FileIcon from '../icons/FileIcon.astro'
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="./meIcon.jpeg"
      alt="angel photo"
    />
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white title">
    Hi, I'm Angel
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300">
    3 years of experience. <strong
      >Lead Web Developer and Fullstack Developer.</strong
    > Mexico City, Mexico. Specialized in building unique and personalized apps.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:hdzangel.gran@gmail.com">
      <MailIcon class="size-4" />
      Contact me
    </SocialPill>
    <SocialPill href="./Angel_Hdz_Gran_Resume.pdf" download>
      <FileIcon class="size-4" />
      Resume
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/angel-hdz-gran">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/HdzAngelGran">
      <GitHubIcon class="size-4" />
      GitHub
    </SocialPill>
  </nav>
</div>
